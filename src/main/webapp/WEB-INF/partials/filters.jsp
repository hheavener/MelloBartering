<div id="filter-container">
    <aside id="filters">
        <div class="filter">
            <p class="filter_name">Categories<span class="status">+</span></p>
            <div class="expandable">
                <input type="checkbox" value="1" id="1">
                <label for="1">Option 1</label><br>
                <input type="checkbox" value="2" id="2">
                <label for="2">Option 2</label><br>
                <input type="checkbox" value="3" id="3">
                <label for="3">Option 3</label><br>
                <input type="checkbox" value="4" id="4">
                <label for="4">Option 4</label><br>
                <input type="checkbox" value="5" id="5">
                <label for="5">Option 5</label><br>
                <input type="checkbox" value="6" id="6">
                <label for="6">Option 6</label><br>
                <input type="checkbox" value="7" id="7">
                <label for="7">Option 7</label><br>
                <input type="checkbox" value="8" id="8">
                <label for="8">Option 8</label><br>
                <input type="checkbox" value="9" id="9">
                <label for="9">Option 9</label><br>
            </div>
        </div>
        <div class="filter">
            <p class="filter_name">Location<span class="status">+</span></p>
            <div class="expandable">
                <input type="number" maxlength="5" placeholder="Enter zipcode">
                <p>Within:</p>
                <select name="distance" id="distance">
                    <option>10 miles</option>
                    <option>25 miles</option>
                    <option>50 miles</option>
                    <option>100 miles</option>
                    <option>Any distance</option>
                </select>
            </div>
        </div>
        <div class="filter">
            <p class="filter_name">Date<span class="status">+</span></p>
            <div class="expandable">
                <input type="date" name="date" id="date">
            </div>
        </div>
        <div class="filter">
            <p class="filter_name">Color<span class="status">+</span></p>
            <div class="expandable">
                <input type="text" name="color" id="color" placeholder="Enter a color">
            </div>
        </div>
        <div class="filter">
            <p class="filter_name">Keywords<span class="status">+</span></p>
            <div class="expandable">
                <input type="text" name="keywords" placeholder="Enter keyword...">
            </div>
        </div>
    </aside>
</div>